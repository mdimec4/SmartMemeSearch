<Window x:Class="SmartMemeSearch.Wpf.Views.FolderManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Meme Folders"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <StackPanel Margin="20" VerticalAlignment="Top">

        <ListBox x:Name="FolderList"
                 ItemsSource="{Binding Folders}"
                 Width="400"
                 Margin="0,0,0,15">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding}" Width="300"/>
                        <Button Content="Remove"
                                DockPanel.Dock="Right"
                                Padding="4,2"
                                Tag="{Binding}"
                                Click="Remove_Click"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Add Folder" Width="120" Margin="0,0,0,10"
                Click="Add_Click"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0"
                    Click="Cancel_Click"/>
            <Button Content="OK" Width="80"
                    Click="Ok_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
